  /* CSS para el título */
.info-heading {
    text-align: center;
}

/* CSS para el contenedor de los enlaces */
.links-container {
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    gap: 10px;
}

/* CSS para los enlaces */
.link-item {
    padding: 10px;
    border: 4px solid#b99e65;
    margin: 5px;
    text-decoration: none; /* Para eliminar el subrayado */
    color: inherit; /* Para heredar el color del texto, opcional */
    border-radius: 8px; /* Redondea los bordes de los enlaces */
}

/* Opcional: agregar un hover para los enlaces */
.link-item:hover {
    background-color: #b99e65d2; /* Un color de fondo ligero en hover */
}

